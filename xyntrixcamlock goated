-- XyntrixScripts Camlock â€“ ULTRA AIM v5 (Camlock + Bullet TP + Silent Aim + Kill Aura)
local plr = game:GetService("Players").LocalPlayer
local cam = workspace.CurrentCamera
local rs = game:GetService("RunService")
local sg = game:GetService("StarterGui")

local target, locking, bulletTP = nil, false, true

-- Dot Visual
local dot = Drawing.new("Circle")
dot.Radius = 4
dot.Thickness = 2
dot.Filled = true
dot.Transparency = 0.75
dot.Color = Color3.fromRGB(0, 120, 255)
dot.Visible = false

-- GUI
local function createGui()
	pcall(function() plr.PlayerGui:FindFirstChild("XyntrixCamlockGui"):Destroy() end)

	local gui = Instance.new("ScreenGui")
	gui.Name = "XyntrixCamlockGui"
	gui.ResetOnSpawn = false
	gui.IgnoreGuiInset = true
	gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
	gui.Parent = plr:WaitForChild("PlayerGui")

	local btn = Instance.new("TextButton")
	btn.Name = "LockToggle"
	btn.Size = UDim2.new(0, 120, 0, 45)
	btn.Position = UDim2.new(0, 50, 0, 200)
	btn.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 18
	btn.Text = "LOCK OFF"
	btn.Active = true
	btn.Draggable = true
	btn.Parent = gui

	local credit = Instance.new("TextLabel")
	credit.Size = UDim2.new(0, 300, 0, 40)
	credit.Position = UDim2.new(1, -320, 1, -50)
	credit.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
	credit.BackgroundTransparency = 1
	credit.TextColor3 = Color3.fromRGB(255, 255, 255)
	credit.Font = Enum.Font.GothamSemibold
	credit.TextSize = 18
	credit.TextXAlignment = Enum.TextXAlignment.Center
	credit.TextYAlignment = Enum.TextYAlignment.Center
	credit.Text = "Made by XyntrixScripts"
	credit.TextTransparency = 1
	credit.Parent = gui

	-- Fade In & Copy Discord
	task.spawn(function()
		for i = 1, 0, -0.01 do
			credit.TextTransparency = i
			credit.BackgroundTransparency = 0.25 + i * 0.75
			task.wait(0.015)
		end
		pcall(function()
			if setclipboard then
				setclipboard("https://discord.gg/VsGXQUwb")
			end
		end)
		task.wait(4.5)
		for i = 0, 1, 0.01 do
			credit.TextTransparency = i
			credit.BackgroundTransparency = 0.25 + i * 0.75
			task.wait(0.015)
		end
	end)

	return btn
end

pcall(function() sg:SetCoreGuiEnabled(Enum.CoreGuiType.All, true) end)

local btn = createGui()

-- Fixed prediction to prevent ping spikes from breaking aim
local function getPing()
	return 0.145 -- consistent smooth aim regardless of lag
end

local function predictPos(char)
	local hrp = char and char:FindFirstChild("HumanoidRootPart")
	if not hrp then return end
	local vel = hrp.AssemblyLinearVelocity or hrp.Velocity
	return hrp.Position + (vel * getPing())
end

-- Target Finder
local function getTarget()
	local closest, dist = nil, math.huge
	for _,v in ipairs(game.Players:GetPlayers()) do
		if v ~= plr and v.Character and v.Character:FindFirstChild("HumanoidRootPart") then
			local pos, vis = cam:WorldToViewportPoint(predictPos(v.Character))
			if vis then
				local mag = (Vector2.new(pos.X, pos.Y) - cam.ViewportSize / 2).Magnitude
				if mag < dist and mag < 300 then
					closest = v
					dist = mag
				end
			end
		end
	end
	return closest
end

-- Lock Toggle
btn.MouseButton1Click:Connect(function()
	if locking then
		locking, target = false, nil
		btn.Text = "LOCK OFF"
	else
		target = getTarget()
		if target then
			locking = true
			btn.Text = "LOCK ON"
		end
	end
end)

-- Camlock Visuals
rs.RenderStepped:Connect(function()
	if locking and target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
		local pred = predictPos(target.Character)
		local screenPos, vis = cam:WorldToViewportPoint(pred)
		dot.Position = Vector2.new(screenPos.X, screenPos.Y)
		dot.Visible = vis
		cam.CFrame = CFrame.new(cam.CFrame.Position, pred)
	else
		dot.Visible = false
	end
end)

-- Bullet TP (for jank gun systems)
workspace.DescendantAdded:Connect(function(obj)
	if bulletTP and target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
		if obj:IsA("BasePart") then
			local name = obj.Name:lower()
			if name:find("bullet") or name:find("proj") or name:find("beam") or name:find("shot") then
				task.wait(0.01)
				local head = target.Character:FindFirstChild("Head")
				if head then
					obj.CFrame = CFrame.new(head.Position)
					obj.Velocity = Vector3.zero
					if obj:FindFirstChild("BodyVelocity") then obj.BodyVelocity.Velocity = Vector3.zero end
					if obj:FindFirstChild("LinearVelocity") then obj.LinearVelocity.VectorVelocity = Vector3.zero end
				end
			end
		end
	end
end)

-- SILENT AIM (for secure games)
local mouse = plr:GetMouse()
local mt = getrawmetatable(game)
local oldIndex = mt.__index
local oldNameCall = mt.__namecall
setreadonly(mt, false)

mt.__index = newcclosure(function(self, key)
	if self == mouse and target and target.Character and target.Character:FindFirstChild("Head") then
		if key == "Target" then return target.Character.Head end
		if key == "Hit" then return CFrame.new(target.Character.Head.Position) end
	end
	return oldIndex(self, key)
end)

mt.__namecall = newcclosure(function(self, ...)
	local args = {...}
	local method = getnamecallmethod()
	if method == "FireServer" and target and target.Character and target.Character:FindFirstChild("Head") then
		for i,v in ipairs(args) do
			if typeof(v) == "Vector3" or typeof(v) == "CFrame" then
				args[i] = target.Character.Head.Position
			end
		end
		return self.FireServer(self, unpack(args))
	end
	return oldNameCall(self, ...)
end)

setreadonly(mt, true)

-- ðŸ’€ XYNTRIX KILL AURA â€“ AUTO DELETE NEARBY ENEMIES
local killAuraRange = 30 -- Studs around you
local autoKill = true

game:GetService("RunService").RenderStepped:Connect(function()
	if not autoKill then return end

	for _, victim in ipairs(game:GetService("Players"):GetPlayers()) do
		if victim ~= plr and victim.Character and victim.Character:FindFirstChild("HumanoidRootPart") and victim.Character:FindFirstChild("Humanoid") then
			local dist = (victim.Character.HumanoidRootPart.Position - plr.Character.HumanoidRootPart.Position).Magnitude
			if dist <= killAuraRange then
				-- Try remotes in held tools first
				for _,tool in pairs(plr.Character:GetChildren()) do
					if tool:IsA("Tool") then
						for _,obj in pairs(tool:GetDescendants()) do
							if obj:IsA("RemoteEvent") then
								pcall(function()
									obj:FireServer(victim.Character)
								end)
							elseif obj:IsA("RemoteFunction") then
								pcall(function()
									obj:InvokeServer(victim.Character)
								end)
							end
						end
					end
				end

				-- Backup: Humanoid HP drain
				pcall(function()
					victim.Character.Humanoid.Health = 0
				end)
			end
		end
	end
end)
